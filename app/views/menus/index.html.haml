%h5.welcome Welcome to the tasty world of Cibus!

.menus
    %h3 Starters
    %table
    - @dishes.each do |dish|
        - if dish.category == 'Starters'
            %tr= dish.name
            %td= dish.description
            %td= "#{dish.price} SEK"
            %td
            %span= add_to_cart(dish, quantity, button_name)
.menus
    %h3 Main Courses
    %table
    - @dishes.each do |dish|
        - if dish.category == 'Main Courses'
            %p= dish.name
            %p= dish.description
            %p= "#{dish.price} SEK"
            %td
                = add_to_cart(dish, qqty = 1, name = 'Add to cart')
.menus
    %h3 Desserts
    %table
    - @dishes.each do |dish|
        - if dish.category == 'Desserts'
            %p= dish.name
            %p= dish.description
            %p= "#{dish.price} SEK"
            %td
                = add_to_cart(dish, qqty = 1, name = 'Add to cart')
.checkout
    = link_to 'Proceed to checkout', cartify.checkout_index_path, id: 'checkout-link'

    