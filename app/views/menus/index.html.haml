%p
    = link_to 'Login'
    = link_to 'Signup'
    = checkout_link
    = shop_icon_quantity
%h1 Cibus
%p Welcome to the tasty world of Cibus!

%h3 Starters
- @dishes.each do |dish|
    - if dish.category == 'Starters'
        %p= dish.name
        %p= dish.description
        %p= "#{dish.price} SEK"
        %td
            = add_to_cart
    
%h3 Main Courses
- @dishes.each do |dish|
    - if dish.category == 'Main Courses'
        %p= dish.name
        %p= dish.description
        %p= "#{dish.price} SEK"
        %td
            = add_to_cart(dish, qqty = 1, name = 'Add to cart')
%h3 Desserts
- @dishes.each do |dish|
    - if dish.category == 'Desserts'
        %p= dish.name
        %p= dish.description
        %p= "#{dish.price} SEK"
        %td
%p
